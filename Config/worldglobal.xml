<?xml version="1.0" encoding="UTF-8"?>

<!-- Defines global world information -->

<worldglobal>

  <append xpath="/worldglobal/environment">

    <!-- day, night -->
    <property name="ambientSkyScale" value="0.85, 0.35"/>
    <property name="ambientGroundScale" value="0.75, 0.25"/>
    <property name="ambientEquatorScale" value="0.65, 0.15"/>

    <property name="ambientInsideSkyScale" value=".25, 0.05"/>
    <property name="ambientInsideGroundScale" value=".15, 0.05"/>
    <property name="ambientInsideEquatorScale" value=".25, 0.05"/>

    <property name="ambientSkyDesat" value=".7, .7"/>

    <property name="ambientMoon" value=".9, .3"/>

    <property name="ambientInsideSpeed" value=".3"/>
    <property name="ambientInsideThreshold" value=".2"/>

    <property name="fogPower" value="1, 1"/>
    <!-- day, night -->
    <property name="fogWater" value=".47, .2"/>
    <!-- density, speed -->
    <property name="fogWaterColor" value=".38, .42, .38"/>

    <!-- How fast your eyes will adapt to new brightness -->
    <property name="exposureDownUpSpeed" value="1.25, 4.5"/>
    <!-- Directly configures unity Auto Exposure settings -->
    <property name="exposureLuminanceRange" value="-9, 5.5"/>
    <!-- Directly configures unity Auto Exposure settings -->
    <property name="exposureFilterRange" value="15, 90"/>
    <!-- Dynamic and custom exposure compensation parameters -->
    <property name="exposureFactorOutAndInsideDay" value="0.85, 0.35"/>
    <property name="exposureFactorOutAndInsideNight" value="0.25, 0.5"/>

    <!-- factors for logarithmic exposure scaling -->
    <property name="ExposureOffset" value="1.03"/>
    <property name="exposureLogBase" value="0.3"/>
    <property name="exposureFallOffFactor" value="1.85"/>

    <!-- final factor and power for exposure -->
    <property name="exposureFactor" value="0.95"/>
    <property name="exposurePower" value="1"/>
    <!-- clamp final exposure factor into range -->
    <property name="exposureMin" value="0.25"/>
    <property name="exposureMax" value="12.5"/>

  </append>

  <!-- Alternative config by redbeardt
